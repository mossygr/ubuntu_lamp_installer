#!bin/bash


### check if the program is run as root

apt -y update && apt -y upgrade

###apache insatlling 
echo -e "######\e[36mInstalling apache.....####\e[0m"
apt -y install apache2 >> log.txt &>/dev/null
apache2 -v  &>/dev/null

if [ $? -eq 0 ]; then #succes
    echo -e "\e[34mApache installed succefully\e[0m"
    sleep 1;
else 
    echo -e "\e[31mERROR: Failed to install apache check\e[0m" #logs
    exit 1 ## stop script 
fi

## mysql installing 
echo -e "######\e[36mInstalling mysql.....####\e[0m"
apt -y install mysql-server >> log.txt &>/dev/null
mysql -v &>/dev/null

if [ $? -eq 0 ]; then
    echo -e "\e[34mMysql Installed Successfully\e[0m"
    sleep 1;
else
    echo -e "\e[31mERROR: Failed to install mysql check\e[0m"
    exit 1
fi


##installing php7
echo -e "######\e[36mInstalling php.....####\e[0m"
add-apt-repository -y ppa:ondrej/php
apt -y install php >> log.txt &>/dev/null
php -v &>/dev/null

if [ $? -eq 0 ]; then
    echo -e "\e[34mPHP Installed Successfully\e[0m"
    sleep 1;
else
    echo -e "\e[31mERROR: Failed to install mysql check\e[0m"
    exit 1
fi

