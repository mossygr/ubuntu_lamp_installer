#!bin/bash


### check if the program is run as root

apt update && sudo apt upgrade

###apache insatlling 
echo "Installing apache"
apt install apache2 > /dev/null 
apache2 -v  > log.txt &>/dev/null

if [ $? -eq 0 ]; then #succes
    echo "apache installed succefully"
else 
    echo ERROR: Failed to install apache check #logs
    exit 1 ## stop script 
fi

## mysql installing 
echo "installing mysql"
apt-get install mysql-server


##installing php7
add-apt-repository -y ppa:ondrej/php
apt-get install php